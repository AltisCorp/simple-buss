<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/home_screen"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:background="@color/default_activity_background"
	android:orientation="vertical">
	
	<TextView  
		android:layout_width="fill_parent"
		android:layout_height="42dip"
		android:background="@drawable/image_title_bar_bg"
		android:padding="4dip"
		android:textSize="22dip"
		android:textStyle="bold"
		android:textColor="@color/default_title_bar_text"
		android:text="Bus Tracking"/>
		
	<LinearLayout
	    android:padding="10dip"
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
		android:layout_weight="1">
    
    <TextView
    	android:paddingBottom="15dip"
    	android:id="@+id/lastupdate"  
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
    	android:textSize="20dip"
	    android:textColor="@color/survey_screen_text"
	    android:text="Last Update: please wait"/>	
	
	  <TextView
    	android:paddingBottom="15dip"
    	android:id="@+id/bus_id"  
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
    	android:textSize="64dip"
	    android:textColor="@color/survey_screen_text"
	    android:text=""/>		
	
	
	</LinearLayout>
		
	<LinearLayout
	    android:orientation="horizontal"
	    android:gravity="left"
	    android:background="@drawable/image_button_bar_bg"
	    android:padding="4dip"
	    android:layout_height="60dip"
    	android:layout_width="fill_parent">
			
		<Button 
		    android:id="@+id/logoff_button"  
    		android:layout_width="wrap_content"
    		android:layout_height="fill_parent"
			android:textSize="16dip"
			android:text="Logoff" />

	</LinearLayout>		
		
		
</LinearLayout>